### BEGIN INIT INFO
# Provides: xllmnrd llmnrd
# Required-Start: $local_fs $network $syslog
# Required-Stop: $local_fs $network $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Start or stop the IPv6 LLMNR responder
### END INIT INFO

NAME='@PACKAGE_NAME@'
DAEMON=@sbindir@/xllmnrd
USER=xllmnrd
PIDDIR=/var/run/xllmnrd

if [ ! -x $DAEMON ]; then
    exit 0
fi

. /lib/lsb/init-functions

case "$1" in
start)
    if [ ! -d $PIDDIR ]; then
        rm -f $PIDDIR
        mkdir $PIDDIR
        chown $USER $PIDDIR
    fi
    # A start failure is expected on Debian-based systems if another daemon is
    # already running.  See issue #31.
    if start_daemon -p $PIDDIR/xllmnrd.pid /bin/su - $USER \
        -s /bin/sh -c "$DAEMON -p $PIDDIR/xllmnrd.pid"; then
        log_success_msg "Started $NAME"
    else
        status=$?
        log_failure_msg "Failed to start $NAME"
        exit $status
    fi
    ;;
stop)
    if killproc -p $PIDDIR/xllmnrd.pid $DAEMON; then
        log_success_msg "Stopped $NAME"
    else
        status=$?
        log_failuer_msg "Failed to stop $NAME"
        exit $status
    fi
    ;;
restart|force-reload)
    $0 stop
    $0 start
    ;;
status)
    pid=$(pidofproc -p $PIDDIR/xllmnrd.pid $DAEMON)
    status=$?
    if [ $status -eq 0 ]; then
        echo "$NAME is running"
    elif [ $status -eq 3 ]; then
        echo "$NAME is not running"
    else
        log_failure_msg "Failed to get the status of $NAME"
    fi
    exit $status
    ;;
*)
    echo "Usage: $@ {start|stop|restart|force-reload|status}" >&2
    exit 3
    ;;
esac

exit 0
